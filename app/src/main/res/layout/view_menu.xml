<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/menu_settings"
            android:layout_width="@dimen/menu_element_size"
            android:layout_height="@dimen/menu_element_size"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/ic_settings"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text_image"
                android:text="@string/settings"
                android:textSize="@dimen/text_image_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_library"
            android:layout_width="@dimen/menu_element_size"
            android:layout_height="@dimen/menu_element_size"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/ic_library"
                android:text="@string/library"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text_image"
                android:text="@string/library"
                android:textSize="@dimen/text_image_size"/>
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/menu_nightmode"
            android:layout_width="@dimen/menu_element_size"
            android:layout_height="@dimen/menu_element_size"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/ic_nightmode"
                android:text="@string/settings"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text_image"
                android:text="@string/nightmode"
                android:textSize="@dimen/text_image_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_exit"
            android:layout_width="@dimen/menu_element_size"
            android:layout_height="@dimen/menu_element_size"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/ic_exit"
                android:text="@string/exit"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_text_image"
                android:text="@string/exit"
                android:textSize="@dimen/text_image_size"/>
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="13 / 1640"/>

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/menu_pages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"/>
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TableRow>
</TableLayout>
