<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Preference -->
        <item name="android:colorAccent" tools:ignore="NewApi">@color/accent</item>
        <item name="android:listSeparatorTextViewStyle">@color/divider</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme.Light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Preference -->
    <style name="AppTheme.ActionBarTheme.Light" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

</resources>
